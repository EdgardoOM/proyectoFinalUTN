<div class="contenedorGris">
    <div class="row">
        <p class="text-end">Hola {{persona}}! <a class="btn btn-danger" href="/admin/login/logout">Cerrar sesi√≥n <i class="fas fa-sign-out-alt"></i></a></p>
    </div>
    <div class="row">
        <p class="text-end"><a class="btn btn-warning" href="/admin/administrador">Volver a Administrador <i class="fa-solid fa-screwdriver-wrench"></i></a></p>
    </div>
    <div class="row">
        <div class="col-7">
            <h3>Listado de Comentarios</h3>
        </div>
        <div class="col-5 text-end">
            <a href="/admin/comentarios/agregarComentarios" class="btn btn-success"><i class="fa fa-plus"></i>Nuevo</a>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                    <tr class="table-dark">
                        <th class="col">#</th>
                        <th class="col">Imagen</th>
                        <th class="col">Usuario</th>
                        <th class="col">Comentario</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each comentarios}}
                    <tr>
                        <th class="col">{{id_comentario}}</th>
                        
                        <td>{{{imagen}}}</td>
                        <td>{{usuario_comentario}}</td>
                        <td>{{comentario_comentario}}</td>
                        <td class="text-end">
                            <a href="/admin/comentarios/modificarComentario/{{id_comentario}}" class="btn btn-secundary"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                            <a href="/admin/comentarios/eliminarComentario/{{id_comentario}}" class="btn btn-secundary"><i class="fa fa-trash" aria-hidden="true"></i></a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>